{
  "name": "Close Encounters of the Third Kind",
  "description": "Helps BAC remote workers to fill out everyday Covid report",
  "manifest_version": 3,
  "version": "0.1",
  "permissions": [
    "activeTab",
    "scripting",
    "alarms",
    "notifications",
    "storage"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "options_page": "options.html",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/assets/icon16.png",
      "32": "/assets/icon32.png",
      "48": "/assets/icon48.png",
      "128": "/assets/icon128.png"
    }
  },
  "icons": {
    "16": "/assets/icon16.png",
    "32": "/assets/icon32.png",
    "48": "/assets/icon48.png",
    "128": "/assets/icon128.png"
  },
  "background": {
    "service_worker": "worker.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "/assets/ringtone.mp3"
      ],
      "matches": [
        "*://*/*"
      ]
    }
  ]
}
